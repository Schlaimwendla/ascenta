<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="@drawable/gradient_bg"
    android:clickable="true"
    android:focusable="true">

    <!-- Added background and clickable=true to prevent clicks passing through -->

    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:cardCornerRadius="70dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginBottom="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo"
            android:layout_margin="20dp"
            android:scaleType="centerInside"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_title"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_subtitle"
        android:textSize="16sp"
        android:textColor="@color/ascenta_light_blue"
        android:layout_marginBottom="50dp"/>

    <!-- SINGLE CONNECT BUTTON -->
    <Button
        android:id="@+id/btn_connect_general"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/menu_connect_general"
        android:textSize="20sp"
        android:backgroundTint="@color/ascenta_dark_blue"
        android:layout_marginBottom="10dp"
        app:icon="@android:drawable/ic_menu_search"/>

    <TextView
        android:id="@+id/tv_connection_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_idle"
        android:textColor="#DDDDDD"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/info_impressum"
        android:textColor="#AAAAAA"
        android:gravity="center"
        android:textSize="12sp"/>

</LinearLayout>