<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_voice"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="30dp"/>

    <!-- Row 1: Record & Replay Audio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="15dp">

        <Button
            android:id="@+id/btn_record"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:text="@string/btn_record"
            android:layout_marginEnd="8dp"
            style="@style/Widget.MaterialComponents.Button"
            android:backgroundTint="@color/ascenta_cyan"
            android:textColor="@color/white"
            app:icon="@android:drawable/ic_btn_speak_now"
            app:iconGravity="textStart"/>

        <!-- Changed color to Cyan to look active, not gray -->
        <Button
            android:id="@+id/btn_replay_audio"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:text="@string/btn_replay_audio"
            android:layout_marginStart="8dp"
            style="@style/Widget.MaterialComponents.Button"
            android:backgroundTint="@color/ascenta_dark_blue"
            android:textColor="@color/white"
            app:icon="@android:drawable/ic_media_play"
            app:iconGravity="textStart"/>
    </LinearLayout>

    <!-- Row 2: Replay TTS -->
    <Button
        android:id="@+id/btn_replay_tts"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="@string/btn_replay_tts"
        style="@style/Widget.MaterialComponents.Button"
        android:backgroundTint="#00ACC1"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_audio_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/status_ready"
        android:textColor="#EEEEEE"
        android:textSize="14sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#95FFFFFF"
        app:cardElevation="4dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">
            <TextView
                android:id="@+id/tv_transcript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/transcript_waiting"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:lineSpacingExtra="4dp"/>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>