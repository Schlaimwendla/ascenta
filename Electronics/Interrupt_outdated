from machine import Pin
import time

# Funktion, die beim Interrupt ausgef체hrt wird
def button_handler(pin):
    print("Button wurde gedr체ckt!")
    time.sleep(1)

button = Pin('PA10', Pin.IN, Pin.PULL_UP)

button.irq(trigger=Pin.IRQ_FALLING, handler=button_handler)

print("Programm l채uft. Dr체cke den Button...")

while True:
    time.sleep(0.1)

